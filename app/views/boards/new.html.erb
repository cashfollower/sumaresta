<fieldset class="control-group">
<%= simple_form_for @board do |f| %>
  <%= f.input :name %>
  <span class="help-inline">This is the name of your board.</span>
  <div class="input-prepend input-append">
    <span class="add-on">$</span>
    <%= f.input :amount, class: "span2", id: "appendedPrependedInput", size: "16", type: "text" %>
    <span class="add-on">.00</span>
  </div>
  <span class="help-inline">This is the amount of your account you will manage.</span>
  <br/>
  <%= f.button :submit %>
<% end %>
</fieldset>